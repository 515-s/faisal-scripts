local remote = game:GetService("ReplicatedStorage")
	:WaitForChild("Events")
	:WaitForChild("GameMessage")

local function mark(cell)
	if not cell then return end

	local pos

	if cell:IsA("Model") then
		pos = cell:GetPivot().Position
	elseif cell:IsA("BasePart") then
		pos = cell.Position
	end

	if not pos then return end

	local p = Instance.new("Part")
	p.Shape = Enum.PartType.Ball
	p.Size = Vector3.new(1.5,1.5,1.5) -- صغير
	p.Anchored = true
	p.CanCollide = false
	p.Material = Enum.Material.Neon
	p.Color = Color3.fromRGB(255,0,0)
	p.Position = pos + Vector3.new(0,1,0)
	p.Parent = workspace
end

remote.OnClientEvent:Connect(function(action, instance, ...)
	if action == "bomb" and instance then
		mark(instance)
	end
end)

print("Bomb marker enabled")
