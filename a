local UIS = game:GetService("UserInputService")
local VIM = game:GetService("VirtualInputManager")
local plr = game.Players.LocalPlayer

-- GUI صغير جداً
local g = Instance.new("ScreenGui", plr.PlayerGui)

local f = Instance.new("Frame", g)
f.Size = UDim2.fromOffset(170,40)
f.Position = UDim2.new(0.5,-85,1,-55)
f.BackgroundColor3 = Color3.fromRGB(35,35,35)
Instance.new("UICorner",f)

local box = Instance.new("TextBox", f)
box.Size = UDim2.fromOffset(70,30)
box.Position = UDim2.fromOffset(5,5)
box.Text = "50"
box.TextScaled = true

local btn = Instance.new("TextButton", f)
btn.Size = UDim2.fromOffset(80,30)
btn.Position = UDim2.fromOffset(85,5)
btn.Text = "OK"
btn.TextScaled = true

local clicks = 0
local armed = false

btn.MouseButton1Click:Connect(function()
	clicks = math.clamp(tonumber(box.Text) or 1,1,150)
	armed = true
	btn.Text = "اضغط"
end)

UIS.InputBegan:Connect(function(input,gpe)
	if gpe or not armed then return end
	if input.UserInputType ~= Enum.UserInputType.MouseButton1
	and input.UserInputType ~= Enum.UserInputType.Touch then return end

	armed = false
	btn.Text = "OK"

	local pos = input.Position -- ← نفس مكان ضغطتك
	local delay = 2/clicks

	for i=1,clicks do
		VIM:SendMouseButtonEvent(pos.X,pos.Y,0,true,game,0)
		VIM:SendMouseButtonEvent(pos.X,pos.Y,0,false,game,0)
		task.wait(delay)
	end
end)
