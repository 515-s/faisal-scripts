local function createMarker(model)
    local main = model.PrimaryPart or model:FindFirstChildWhichIsA("BasePart")
    if not main then return end

    local part = Instance.new("Part")
    part.Size = Vector3.new(1,30,1)
    part.Material = Enum.Material.Neon
    part.CanCollide = false
    part.Anchored = false
    part.Name = "Marker"
    part.CFrame = main.CFrame * CFrame.new(0,20,0)

    -- يلون البارت حسب نوع الموديل
    if model.Name == "Gold" then
        part.Color = Color3.fromRGB(255,255,0) -- أصفر
    elseif model.Name == "Secret" then
        part.Color = Color3.fromRGB(0,0,0) -- أسود
    else
        part.Color = Color3.fromRGB(255,0,0) -- أحمر
    end

    -- يربطه بالموديل
    local weld = Instance.new("WeldConstraint")
    weld.Part0 = part
    weld.Part1 = main
    weld.Parent = part

    part.Parent = workspace
end
