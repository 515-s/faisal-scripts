local Players = game:GetService("Players")
local UserInputService = game:GetService("UserInputService")
local RunService = game:GetService("RunService")

local player = Players.LocalPlayer

-- ScreenGui للعرض
local gui = Instance.new("ScreenGui")
gui.Name = "MousePosDisplay"
gui.ResetOnSpawn = false
gui.Parent = player:WaitForChild("PlayerGui")

-- TextLabel جنب الماوس
local label = Instance.new("TextLabel")
label.Size = UDim2.fromOffset(120, 25)
label.BackgroundColor3 = Color3.fromRGB(0,0,0)
label.BackgroundTransparency = 0.5
label.TextColor3 = Color3.new(1,1,1)
label.Font = Enum.Font.SourceSansBold
label.TextScaled = true
label.Text = "X:0 Y:0"
label.ZIndex = 999
label.Parent = gui

-- تحديث موقع النص مع الماوس
RunService.RenderStepped:Connect(function()
	local mousePos = UserInputService:GetMouseLocation()
	label.Position = UDim2.fromOffset(mousePos.X + 15, mousePos.Y + 15) -- تحرك النص جنب الماوس
	label.Text = "X:"..math.floor(mousePos.X).." Y:"..math.floor(mousePos.Y)
end)

-- نسخ الإحداثيات عند الضغط على حرف T
UserInputService.InputBegan:Connect(function(input, gameProcessed)
	if gameProcessed then return end
	if input.UserInputType == Enum.UserInputType.Keyboard and input.KeyCode == Enum.KeyCode.T then
		local coords = label.Text
		if setclipboard then
			setclipboard(coords)
		end
		label.Text = coords.." Copied ✓"
		task.wait(0.5)
		-- ارجع للنص العادي
		local mousePos = UserInputService:GetMouseLocation()
		label.Text = "X:"..math.floor(mousePos.X).." Y:"..math.floor(mousePos.Y)
	end
end)
