-- LocalScript: Big Bomb Marker
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local workspace = game:GetService("Workspace")

-- جلب الريموت
local remote = ReplicatedStorage:WaitForChild("Events"):WaitForChild("GameMessage")

-- دالة لوضع العلامة على القنبلة
local function markBomb(cell)
	if not cell then return end
	local pos
	if cell:IsA("Model") then
		if pcall(function() return cell:GetPivot() end) then
			pos = cell:GetPivot().Position
		end
	elseif cell:IsA("BasePart") then
		pos = cell.Position
	end
	if not pos then return end

	local bombPart = Instance.new("Part")
	bombPart.Shape = Enum.PartType.Ball
	bombPart.Size = Vector3.new(4,4,4) -- حجم كبير
	bombPart.Anchored = true
	bombPart.CanCollide = false
	bombPart.Material = Enum.Material.Neon
	bombPart.Color = Color3.fromRGB(255,0,0)
	bombPart.Position = pos + Vector3.new(0,2,0) -- يرتفع شوي فوق الأرض
	bombPart.Parent = workspace
end

-- توصيل الريموت
remote.OnClientEvent:Connect(function(action, instance, ...)
	if action == "bomb" and instance then
		markBomb(instance)
	end
end)

print("Big Bomb Marker Enabled")
