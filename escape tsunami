local player = game.Players.LocalPlayer
local RunService = game:GetService("RunService")

-- الإحداثيات، خليتهم اثنين فقط
local coords = {
	Vector3.new(200, -3, 0),
	Vector3.new(284, -3, 0),
}

local index = 1
local root

-- إنشاء GUI إذا ما موجود
local gui = player:WaitForChild("PlayerGui"):FindFirstChild("TeleportGUI")
if not gui then
	gui = Instance.new("ScreenGui")
	gui.Name = "TeleportGUI"
	gui.ResetOnSpawn = false
	gui.Parent = player.PlayerGui
end

local btn = gui:FindFirstChild("TeleportButton")
if not btn then
	btn = Instance.new("TextButton")
	btn.Name = "TeleportButton"
	btn.Size = UDim2.new(0, 90, 0, 32)
	btn.Position = UDim2.new(0.5, -45, 0, 10)
	btn.Text = "Teleport"
	btn.TextScaled = true
	btn.TextColor3 = Color3.fromRGB(255,255,255)
	btn.Font = Enum.Font.GothamMedium
	btn.BackgroundColor3 = Color3.fromRGB(0,0,0)
	btn.Active = true
	btn.Draggable = true
	btn.Parent = gui
end

-- دالة لتحديث root
local function refreshRoot()
	local char = player.Character or player.CharacterAdded:Wait()
	root = char:WaitForChild("HumanoidRootPart")
end
refreshRoot()

player.CharacterAdded:Connect(function()
	refreshRoot()
	index = 1
end)

-- دالة النقل خطوة بخطوة
local function tpStep(targetPos)
	if not root then refreshRoot() end
	local stepSize = 10 -- وحدة كل خطوة
	local waitTime = 0.05 -- كل كم ثانية
	local currentPos = root.Position
	local direction = (targetPos - currentPos).Unit
	local distance = (targetPos - currentPos).Magnitude

	while distance > 4 do
		if root and root.Parent then
			local move = math.min(stepSize, distance)
			root.CFrame = CFrame.new(root.Position + direction * move)
			task.wait(waitTime)
			currentPos = root.Position
			distance = (targetPos - currentPos).Magnitude
		else
			break
		end
	end

	-- النقل الأخير 4 وحدات للوصول للهدف بدقة
	if root and root.Parent then
		root.CFrame = CFrame.new(targetPos)
	end
end

-- كول داون الزر
local cooldown = false
local function startCooldown()
	cooldown = true
	for t = 10, 1, -1 do
		btn.Text = string.format("%.1f", t/10)
		task.wait(0.1)
	end
	btn.Text = "Teleport"
	cooldown = false
end

-- حدث الضغط على الزر
btn.MouseButton1Click:Connect(function()
	if cooldown then return end

	tpStep(coords[index])
	index = index + 1
	if index > #coords then
		index = 1
	end

	startCooldown()
end)
