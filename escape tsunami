local player = game.Players.LocalPlayer
local RunService = game:GetService("RunService")

local coords = {
	Vector3.new(200, -3, 0),
	Vector3.new(284, -3, 0),
	Vector3.new(396, -3, 0),
}

local index = 1
local root

local gui = player.PlayerGui:FindFirstChild("TeleportGUI")
if not gui then
	gui = Instance.new("ScreenGui")
	gui.Name = "TeleportGUI"
	gui.ResetOnSpawn = false
	gui.Parent = player.PlayerGui
end

local btn = gui:FindFirstChild("TeleportButton")
if not btn then
	btn = Instance.new("TextButton")
	btn.Name = "TeleportButton"
	btn.Size = UDim2.new(0, 90, 0, 32)
	btn.Position = UDim2.new(0.5, -45, 0, 10)
	btn.Text = "Teleport"
	btn.TextScaled = true
	btn.TextColor3 = Color3.fromRGB(255,255,255)
	btn.Font = Enum.Font.GothamMedium
	btn.BackgroundColor3 = Color3.fromRGB(0,0,0)
	btn.Active = true
	btn.Draggable = true
	btn.Parent = gui
end

local function refreshRoot()
	local char = player.Character
	if char then
		root = char:FindFirstChild("HumanoidRootPart")
	else
		root = nil
	end
end
refreshRoot()

player.CharacterAdded:Connect(function()
	root = nil
end)

local function tpStep(targetPos)
	refreshRoot()
	if not root then return end

	root.CFrame = root.CFrame + Vector3.new(0,10,0)
	task.wait(0.01)

	local stepSize = 10
	local waitTime = 0.01

	while true do
		refreshRoot()
		if not root or not root.Parent then
			task.wait(0.1)
			refreshRoot()
			if root then
				root.CFrame = CFrame.new(coords[1])
				index = 1
			end
			return
		end

		local currentPos = root.Position
		local diff = targetPos - currentPos
		local distance = diff.Magnitude

		if distance <= 0.05 then break end

		local move = math.min(stepSize, distance)
		root.CFrame = CFrame.new(currentPos + diff.Unit * move)
		task.wait(waitTime)
	end

	if root and root.Parent then
		root.CFrame = CFrame.new(targetPos)
	end
end

btn.MouseButton1Click:Connect(function()
	tpStep(coords[index])
	index = index + 1
	if index > #coords then
		index = 1
	end
end)
